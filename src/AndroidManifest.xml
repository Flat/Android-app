<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.radio.android"
    android:versionCode="2"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".RequestActivity"
            android:screenOrientation="portrait"
            android:label="Request"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".RequestActivity" />

        </activity>
        <activity android:name=".QueueActivity"
                  android:screenOrientation="portrait"
                  android:label="Queue"
                android:parentActivityName=".MainActivity"/>
        <activity android:name=".LastPlayedActivity"
                  android:screenOrientation="portrait"

                  android:label="Last Played"
                android:parentActivityName=".MainActivity"/>

        <service android:name=".RadioService" />

        <receiver android:name=".RadioWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />
        </receiver>
        
        <receiver android:name=".LockscreenReceiver" />
    </application>

</manifest>