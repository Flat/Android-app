<?xml version="1.0" encoding="utf-8"?>
    <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory android:title="Favorites">
            <EditTextPreference android:key="username" android:title="User Name" android:shouldDisableView="false" android:summary="Nickname used in IRC"/>
            <EditTextPreference android:key="authcode" android:title="Authentication Code" android:summary="Authcodes are given out by Hanyuu-sama on IRC"/>
            <MultiSelectListPreference android:key="faveDjs" android:title="Favorite DJ's" android:summary="Manage your favorite DJ's list" android:entries="@array/faveDjsList" android:entryValues="@array/faveDjsListValues"/>
        </PreferenceCategory>
        <PreferenceCategory android:title="Visualizer">
            <CheckBoxPreference android:title="Waveform Visualizer" android:summary="Enable the waveform visualizer" android:key="waveVisEnabled" android:defaultValue="false"/>
            <CheckBoxPreference android:title="dB Bar Graph" android:summary="Enable the dB Bar Graph (still in development)" android:key="dBGraphEnabled" android:defaultValue="false"/>
        </PreferenceCategory>
        <PreferenceCategory android:title="Other Settings">
            <ListPreference android:title="Standby Mode" android:summary="Stops playback after set time" android:key="pref_sleepTimer" android:entries="@array/sleepTimer" android:entryValues="@array/sleepTimerValues" android:defaultValue="Off" android:persistent="true"/>
        </PreferenceCategory>
    </PreferenceScreen>
